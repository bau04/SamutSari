<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Forgot Password</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"/>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');

    * {
      padding: 0;
      margin: 0;
      box-sizing: border-box;
      font-family: 'Poppins', sans-serif;
    }

    body {
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      background: linear-gradient(to top, #EE4D2D 50%, #ff9f7f 90%) no-repeat;
    }

    .panel {
      width: 380px;
      min-height: 420px;
      background: #fff;
      border-radius: 12px;
      box-shadow: 20px 20px 80px rgb(218, 218, 218);
      padding: 20px;
    }

    .panel-heading {
      text-align: center;
      margin-bottom: 10px;
    }

    .input-field {
      position: relative;
      border-radius: 5px;
      display: flex;
      align-items: center;
      border: 1px solid #ddd;
      margin-bottom: 10px;
      padding: 5px;
    }

    .input-field span {
      color: #EE4D2D;
      margin-right: 8px;
    }

    .input-field input {
      border: none;
      outline: none;
      width: 100%;
      padding: 8px;
      font-size: 14px;
    }

    .btn.btn-primary {
      margin-top: 20px;
      border-radius: 15px;
      width: 100%;
      height: 60px;
      background-color: #EE4D2D;
      border: none;
      color: white;
      font-size: 16px;
      font-weight: bold;
      cursor: pointer;
    }

    .btn.btn-primary:hover {
      background-color: #d63f22;
    }

    .eye-toggle {
      position: absolute;
      right: 12px;
      top: 50%;
      transform: translateY(-50%);
      cursor: pointer;
      color: #EE4D2D;
    }

    .text-center.pt-4 {
      margin-top: 25px;
      text-align: center;
      font-size: 14px;
      color: #555;
    }

    a {
      color: #EE4D2D;
      text-decoration: none;
      font-weight: bold;
    }

    /* Custom Modal Styles */
    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
    }

    .modal-content {
      background-color: #fff;
      margin: 15% auto;
      padding: 30px;
      border-radius: 12px;
      width: 90%;
      max-width: 400px;
      text-align: center;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }

    .modal-header {
      color: #EE4D2D;
      font-size: 18px;
      font-weight: bold;
      margin-bottom: 15px;
    }

    .modal-message {
      color: #555;
      margin-bottom: 20px;
      line-height: 1.4;
    }

    .modal-button {
      background-color: #EE4D2D;
      color: white;
      border: none;
      padding: 10px 30px;
      border-radius: 8px;
      cursor: pointer;
      font-size: 14px;
      font-weight: bold;
    }

    .modal-button:hover {
      background-color: #d63f22;
    }

    .success-modal .modal-header {
      color: #28a745;
    }

    .success-modal .modal-button {
      background-color: #28a745;
    }

    .success-modal .modal-button:hover {
      background-color: #218838;
    }
  </style>
</head>
<body>
  <div class="panel">
    <div class="panel-heading">
      <h3 class="pt-3 font-weight-bold">Forgot Password</h3>
    </div>

    <% if (!emailVerified) { %>
    <div class="panel-body p-3">
      <form action="/forgot-password" method="POST">
        <p>Please enter your registered email address</p>
        <div class="input-field">
          <span class="far fa-envelope p-2"></span>
          <input type="email" name="email" placeholder="Email" required />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
      <div class="text-center pt-4">
        <a href="/login">Back to Login</a>
      </div>
    </div>
    <% } else { %>
    <div class="panel-body p-3">
      <form action="/forgot-password/change" method="POST">
        <input type="hidden" name="email" value="<%= email %>" />
        <p>Set your new password</p>
        <div class="input-field">
          <span class="fas fa-lock px-2"></span>
          <input type="password" name="password" placeholder="New Password" id="password" required />
          <i class="far fa-eye-slash eye-toggle" id="togglePassword"></i>
        </div>
        <button type="submit" class="btn btn-primary">Change Password</button>
      </form>
      <div class="text-center pt-4">
        <a href="/login">Back to Login</a>
      </div>
    </div>
    <% } %>
  </div>

  <!-- Custom Modal -->
  <div id="messageModal" class="modal">
    <div class="modal-content">
      <div class="modal-header" id="modalHeader">⚠️ Error</div>
      <div class="modal-message" id="modalMessage"></div>
      <button class="modal-button" onclick="closeModal()">OK</button>
    </div>
  </div>

  <!-- Hidden input to pass message from server to client -->
  <% if (message) { %>
    <input type="hidden" id="serverMessage" value="<%= message.replace(/"/g, '&quot;') %>">
  <% } %>

  <script>
    const togglePassword = document.querySelector("#togglePassword");
    if (togglePassword) {
      const password = document.querySelector("#password");
      togglePassword.addEventListener("click", function () {
        const type = password.getAttribute("type") === "password" ? "text" : "password";
        password.setAttribute("type", type);
        this.classList.toggle("fa-eye");
        this.classList.toggle("fa-eye-slash");
      });
    }

    // Modal functionality
    function showModal(message, isSuccess = false) {
      const modal = document.getElementById('messageModal');
      const modalContent = modal.querySelector('.modal-content');
      const modalHeader = document.getElementById('modalHeader');
      
      if (isSuccess) {
        modalContent.classList.add('success-modal');
        modalHeader.textContent = '✅ Success';
      } else {
        modalContent.classList.remove('success-modal');
        modalHeader.textContent = '⚠️ Error';
      }
      
      document.getElementById('modalMessage').textContent = message;
      modal.style.display = 'block';
    }

    function closeModal() {
      document.getElementById('messageModal').style.display = 'none';
    }

    // Close modal when clicking outside of it
    window.onclick = function(event) {
      const modal = document.getElementById('messageModal');
      if (event.target == modal) {
        closeModal();
      }
    }

    // Check for server message on page load
    window.onload = function() {
      const messageInput = document.getElementById('serverMessage');
      if (messageInput) {
        showModal(messageInput.value);
      }
    }
  </script>
</body>
</html>
